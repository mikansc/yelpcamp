<%- include("partials/header") %>
<div class="container mt-3">
    
    <div class="w-50 m-auto">
        <h2>Edit <%= camp.name %></h2>
        <form action="/campgrounds/<%= camp._id %>?_method=PATCH" method="POST">
            <div class="form-group">
                <label for="name">Location name:</label>
                <input class="form-control" type="text" value="<%= camp.name %>" name="camp[name]" id="name">
            </div>
            <div class="form-group">
                <label for="image">Image URL:</label>
                <input class="form-control" type="text" value="<%= camp.image %>" name="camp[image]" id="image">
            </div>
            <div class="form-group">
                <label for="description">Location info:</label>
                <textarea class="form-control" name="camp[description]" id="description" cols="30" rows="10"><%= camp.description %></textarea>
            </div>
            <button class="btn btn-success">Update now</button>
        </form>
    </div>
</div>

<%- include("partials/footer") %>