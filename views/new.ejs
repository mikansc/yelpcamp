<%- include("partials/header") %>
<div class="container mt-3">
    
    <div class="w-50 m-auto">
        <h2>Novo campground</h2>
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <label for="name">Location name:</label>
                <input class="form-control" type="text" placeholder="Name" name="camp[name]" id="name" required>
            </div>
            <div class="form-group">
                <label for="image">Image URL:</label>
                <input class="form-control" type="text" placeholder="image url" name="camp[image]" id="image" required>
            </div>
            <div class="form-group">
                <label for="description">Location info:</label>
                <textarea class="form-control" name="camp[description]" id="description" cols="30" rows="10" required></textarea>
            </div>
            <button class="btn btn-success">Submit</button>
        </form>
    </div>
</div>

<%- include("partials/footer") %>